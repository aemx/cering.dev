//- music release
mixin music(title, year, genre, length, imgUrl, scUrl, bcUrl)
    .release-detail
        img.release-img(src=`./img/music/${imgUrl}.png?as=webp` alt=`The cover art for ${title}`)
        .release-info
            .release-top
                h3.h3.release-title #{title} #[span.text (#{year})]
                .release-genrelen
                    p.text #{genre}
                    p.text #{length}'
            .release-action
                a.release-link(href=`https://soundcloud.com/cerhythm/${scUrl}` target="_blank" rel="noopener" title="SoundCloud" aria-label="Listen on SoundCloud")
                    include ../img/icons/soundcloud.svg
                a.release-link(href=`https://cering.bandcamp.com/${bcUrl}` target="_blank" rel="noopener" title="Bandcamp" aria-label="Listen on Bandcamp")
                    include ../img/icons/bandcamp.svg
//- itgxl release
mixin itgxl(title, year, imgUrl)
    .itgxl-detail
        img.itgxl-img(src=`./img/itg/${imgUrl}.png?as=webp` alt=`The banner art for ${title}`)
        .itgxl-info
            .itgxl-titledate
                p.text #[b.bold #{title}]
                p.tsm #{year}
            .itgxl-action
                a.itgxl-link(href=`` target="_blank" rel="noopener" title="YouTube" aria-label="Watch on YouTube")
                    include ../img/icons/youtube.svg


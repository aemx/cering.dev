.card
    user-select none
    height 322px
    flex 2
    min-width 650px
    axis(22px, mono-lite)
    display flex
    flex-flow column nowrap
    padding 24px 28px
    justify-content space-between
    position relative
    &-blue
        gradient-bg("left, grads[8] 0%, grads[7] 100%")
    &-orange
        gradient-bg("left, grads[1] 0%, grads[0] 100%")
    &-pink
        gradient-bg("left, grads[9] 0%, grads[10] 100%")
    &-title
        z-index 1
        width 180px
    &-desc
        z-index 1
        width 180px
    &-img
        position absolute
        height 100%
        margin -24px auto
        right 0
    &-bg
        position absolute
        width 100%
        height 100%
        margin -24px -28px
        background url('../img/texture_alt.png?as=webp') right bottom
        background-size 24px
.mini
    user-select none
    display flex
    flex-flow column nowrap
    padding 24px 28px
    justify-content space-between
    align-items stretch
    width 392px
    height 322px
    axis(22px, mono-lite)
    &-desc
        text-align right
    &-green
        @extend .mini
        gradient-bg("top, grads[3] 0%, grads[2] 150%")
    &-red
        @extend .mini
        gradient-bg("top, grads[11] 0%, grads[0] 150%")
    &-purple
        @extend .mini
        gradient-bg("top, grads[8] 0%, grads[9] 150%")
.micro
    user-select none
    display flex
    flex-flow column nowrap
    padding 24px 28px
    justify-content space-between
    width 588px
    height 161px
    &-indigo
        @extend .micro
        gradient-bg("top, grads[9] 0%, grads[8] 220%")
    &-title
        axis(22px, mono-lite)
    &-desc
        inter(38px, mono-lite, 700)
        text-decoration underline
        text-decoration-thickness 2px
        text-underline-offset 1px
        align-self flex-end
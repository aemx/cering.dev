.socials
    display flex
    flex-flow row wrap
    justify-self center
    justify-content space-between
    margin 48px auto 8px
    max-width 195px
    &-link
        width 24px
        fill mono
        transition 0.2s
        for c, i in brand-colors
            &:nth-child({i+1}):hover
                fill c
                transform scale(1.2)
.copyright
    inter(14px, mono, 400)
    text-align center
    margin-bottom 4px
    svg
        margin 0 0 -1px 1px
        width 54px
        fill mono
.build
    ubuntu(12px, mono-shade)
    text-align center
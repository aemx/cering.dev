.footer
    padding 32px 48px
    margin-top 12px
.socials
    display flex
    flex-flow row wrap
    justify-self center
    justify-content center
    &-link
        width 32px
        fill dark-lite
        padding 4px
        margin 0 4px
        transition fill 0.25s ease-in-out, transform 0.25s ease-out
        for c, i in brand-mute
            &:nth-child({i+1})
                fill c
                &:hover
                    transform scale(1.2)
                    fill brand[i]
.copyright
    inter(14px, lite-dark, 300, 0, -0.02em)
    text-align center
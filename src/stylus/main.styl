@require './util/color'
@require './util/fonts'
@require './util/reset'
@require './util/vendor'
@require './components/card'
@require './components/footer'
@require './components/header'
@require './components/scrollbar'
@require './pages/gate'
@require './pages/index'

html
    scroll-behavior smooth
    -ms-overflow-style none
    overflow overlay
.body
    background-color dark
    display flex
    flex-flow column nowrap
    justify-content space-between
.main
    mar = 32px
    margin mar 48px
    min-height "calc(100vh - %s * 2)" % mar
    display flex
    flex-flow column nowrap
    gap 48px

// headers ////////////////////////////////////////////////////////////////////

.h1
    inter(90px, lite, 700)
.h2
    inter(56px, lite, 700)

// body text //////////////////////////////////////////////////////////////////

.text
    inter(18px, lite, 400,, -0.02em)
    line-height 24px
    text-align justify
    &-br
        @extend .text
        margin-bottom 24px
.link
    text-decoration none
    inter(20px, alt-tint, 400)
    transition 0.2s
    &:hover
        inter(20px, alt, 700)
.center
    text-align center
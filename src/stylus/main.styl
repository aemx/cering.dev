@require './util/color'
@require './util/fonts'
@require './util/mixins'
@require './util/reset'
@require './components/footer'
@require './components/header'
@require './components/scrollbar'
@require './pages/home'
@require './pages/portfolio'
@require './pages/resume'

html
    scroll-behavior smooth
body
    background-color dark
    //max-width 928px
main
    margin 0 auto
    padding 8px 24px
    min-height calc(100dvh - 93px - 16px - 149px)
    overflow-x hidden
h1
    head(64px, lite-head, 600)
    margin-bottom 16px
h2
    head(48px, lite-head, 600)
    margin-bottom 12px
h3
    head(22px, lite-head, 600)
    margin-bottom 4px
.hsub
    axis(22px, lite)
p, li
    text(16px, lite, 400)
    line-height 20px
    text-align justify
    margin-bottom 16px
ul
    list-style-position inside
a
    text(16px, soft.blue, 600)
b
    color lite-head
    font-weight 600
hr
    background-color dark-lite
    border 0
    margin 32px auto 32px
    height 1px
    width 200px

.comment
    color lite-dark
    &-small
        @extends .comment
        font-size 12px

.no-bold
    font-weight 400

.diff
    display inline-block
    position relative
    top -8px
    margin-left 4px
    text-align center
    text(14px, lite, 600)
    border-radius 4px
    padding 2px 4px
    background-color dark-lite

.action
    display inline-block
    text-align center
    text(14px, lite, 600,, -0.02em)
    border-radius 4px
    padding 4px 8px
    margin-right 4px
    background-color main-dark
    hover-color(soft.blurple)

.center
    text-align center

.right
    text-align right

.num
    display inline-block
    text-align center
    text(14px, lite, 600,, -0.02em)
    width 32px
    border-radius 4px
    padding 2px 4px
    margin-right 4px
    background-color main-dark

.external::after
    content " ðŸ¡¥"
    position relative
    font-size 0.6em
    top -1px
    letter-spacing 0px

.extend
    &-small
        margin-bottom 8px
    &-none
        margin-bottom 0

.container
    margin-bottom 16px  

.crunch
    line-height 10px !important
    margin-bottom 2px !important

@keyframes awes
    0%
        filter hue-rotate(0deg)
    50%
        filter hue-rotate(100deg)
    100%
        filter hue-rotate(0deg)

.thin
    width 100%
    max-width 820px
    border-radius 4px

.link
    text-align justify
    &-red
        @extend .link
        text(14px, ceri-red, 600,, -0.02em)
    &-yellow
        @extend .link
        text(14px, ceri-yellow, 600,, -0.02em)
    &-blue
        @extend .link
        text(14px, ceri-blue, 600,, -0.02em)
    &-purple
        @extend .link
        text(14px, ceri-purple, 600,, -0.02em)
    &-grey
        @extend .link
        text(14px, lite-dark, 600,, -0.02em)
    &-epic
        @extend .link-blue
        animation awes 2s infinite

.sig
    width 225px
    fill alt()
    margin 4px 0 0 auto

.freeze
  overflow-y hidden

.lowered
  position relative
  z-index -2

.no-zindex
  z-index 1
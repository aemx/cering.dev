@require './util/color'
@require './util/fonts'
@require './util/reset'
@require './util/vendor'
@require './components/footer'
@require './components/header'
@require './components/scrollbar'

html
    scroll-behavior smooth
body
    margin 32px auto
    padding 0 48px
    background-color dark
    max-width 928px

main
    min-height calc(100vh - 48px - 42px - 48px - 70px - 16px)

// headers ////////////////////////////////////////////////////////////////////

h1
    inter(48px, lite, 650)
    margin-bottom 16px
h2
    inter(34px, lite, 650)
    margin-bottom 16px
.hsub
    axis(22px, lite)

// body text //////////////////////////////////////////////////////////////////

p
    inter(14px, lite, 325,, -0.02em)
    line-height 20px
    text-align justify
    margin-bottom 16px
a
    color grad[6]
    font-weight 600
    __hover__()
b
    font-weight 600
hr
    background-color dark-lite
    border 0
    margin 32px auto 32px
    height 1px
    width 200px

.comment
    color #888888
    &-small
        @extends .comment
        font-size 12px

.center
    text-align center

.right
    text-align right

.num
    display inline-block
    inter(14px, lite, 600,, -0.02em)
    text-align justify
    width 22px

.external::after
  content " ðŸ¡¥"
  position relative
  font-size 0.6em
  top -1px
  letter-spacing 0px

.extend
    &-small
        margin-bottom 8px
    &-none
        margin-bottom 0


// stuff //////////////////////////////////////////////////////////////////////

.container
    margin-bottom 16px

@keyframes awes
    0%
        filter hue-rotate(0deg)
    50%
        filter hue-rotate(100deg)
    100%
        filter hue-rotate(0deg)

.thin
    width 100%
    max-width 820px
    __hover__()

.link
    text-align justify
    __hover__()
    &-red
        @extend .link
        inter(14px, grad[0], 600,, -0.02em)
    &-yellow
        @extend .link
        inter(14px, grad[2], 600,, -0.02em)
    &-blue
        @extend .link
        inter(14px, grad[6], 600,, -0.02em)
    &-purple
        @extend .link
        inter(14px, grad[10], 600,, -0.02em)
    &-grey
        @extend .link
        inter(14px, lite-dark, 600,, -0.02em)
    &-epic
        @extend .link-blue
        animation awes 2s infinite

.sig
    width 225px
    fill alt()
    margin 4px 0 0 auto
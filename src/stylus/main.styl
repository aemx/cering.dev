@require './util/color'
@require './util/fonts'
@require './util/reset'
@require './util/vendor'
@require './components/card'
@require './components/footer'
@require './components/header'
@require './components/scrollbar'
@require './pages/gate'
@require './pages/index'

html
    scroll-behavior smooth
    -ms-overflow-style none
    overflow overlay

.body
    background-color mono-dark
    display flex
    flex-flow column nowrap
    justify-content space-between
    animation init ease 1s
    mar = 32px
    margin mar 48px
    min-height "calc(100vh - %s * 2)" % mar

.main
    margin 0 auto
    display flex
    flex-flow column nowrap
    gap 48px

// headers ////////////////////////////////////////////////////////////////////

.h1
    inter(56px, mono-lite, 700)
.h2
    inter(42px, mono-lite, 700)

// body text //////////////////////////////////////////////////////////////////

.text
    inter(18px, mono-lite, 400,, -0.02em)
    line-height 24px
    text-align justify
    &-br
        @extend .text
        margin-bottom 24px
.link
    text-decoration none
    inter(20px, alt-tint, 400)
    transition 0.2s
    &:hover
        inter(20px, alt, 700)
.code
    display block
    ubuntu(12px, mono)
    line-height 16px
    background mono-shade
    padding 12px 16px
    border-radius 8px
    margin-bottom 12px
.center
    text-align center
.right
    text-align-last right
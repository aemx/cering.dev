.portfolio
  // landing
  &-main
    flex(row, wrap, left, gap: 8px)
    &-outer
      position relative
      width calc(50% - 4px)
    &-text
      flex(row, wrap, left, end)
      width 100%
      height 100%
      padding 8px
      position absolute
      head(8vw, lite-head, 600)
      z-index 1
      user-select none
      pointer-events none
    &-inner
      height 100%
      hover-highlight-intense()
    &-image
      source, img
        width 100%
        border-radius 4px
  
  // ind. pages
  &-nav
    flex(row, nowrap, space-evenly)
    a
      text(20px, lite, 500)
      padding 4px 16px
      border-radius 4px
  &-lang
    flex(row, nowrap, left, gap: 16px)
    margin-bottom 16px
    svg, source, img
      width 32px
  &-actions
    flex(row, wrap, left, gap: 8px)
    margin-bottom 16px
  &-outer
    flex(column, nowrap)
    margin-bottom 16px
  &-embed
    width 100%
    source, img
      width 100%
      border-radius 4px
    //min-width 392px
    //height calc(392px * 9 / 16)
    margin-bottom 16px
  &-inner
    li
      line-height 16px
      margin-bottom 6px

.feature
  line-height 16px
  width 100%
  background-color dark-mid
  border-left 8px solid cering-purple
  outline 1px solid cering-purple
  padding 8px 12px
  border-radius 4px
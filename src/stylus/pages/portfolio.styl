.portfolio
  // landing
  &-main
    flex(row, wrap, center, gap: 8px)
    &-outer
      position relative
      width calc(50% - 4px)
      +tablet()
        width calc(25% - 6px)
    &-text
      flex(row, wrap, left, end)
      width 100%
      height 100%
      padding 12px 8px
      position absolute
      head(8vw, lite-head, 600)
      z-index 1
      user-select none
      pointer-events none
      span
        text-shadow: 0px 0px 4px #000
        line-height 8.2vw
      +tablet()
        font-size 5vw
        span
          line-height 5.2vw
      +standard()
        font-size 44px
        span
          line-height 44px
    &-inner
      height 100%
      hover-highlight-intense()
    &-image
      source, img
        width 100%
        border-radius 4px
  
  // ind. pages
  &-nav
    flex(row, nowrap, space-evenly)
    a
      text(20px, lite, 600)
      padding 4px 16px
      border-radius 4px
  &-lang
    flex(row, nowrap, left, gap: 16px)
    margin-bottom 16px
    svg, source, img
      width 32px
  &-actions
    flex(row, wrap, left, gap: 16px)
    margin-bottom 16px
  &-outer
    flex(column, nowrap)
    margin-bottom 32px
    +laptop()
      flex(row, nowrap, center, start, gap: 16px)
  &-embed
    width 100%
    +laptop()
      min-width 55%
    source, img
      width 100%
      border-radius 4px
    //min-width 392px
    //height calc(392px * 9 / 16)
    margin-bottom 16px
  &-inner
    li
      line-height 16px
      margin-bottom 6px

.feature
  line-height 16px
  width 100%
  background-color dark-mid
  border-left 4px solid main-dark
  padding 8px 12px
  border-radius 4px
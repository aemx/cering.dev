.resume
    display flex
    flex-flow row nowrap
    gap 24px
    margin-top 32px
    &-top
        display flex
        flex-flow row-reverse nowrap
        justify-content center
        align-items center
        gap 24px
        * svg  
            display inline
            width 168px
            margin-left -6px
            margin-right -6px
            path
                fill lite-head
        &-links
            display flex
            flex-flow row nowrap
            gap 8px
    &-me
        width 150px
        border-radius 8px
    &-sub
        text(22px, lite, 600)
        font-style italic
    &-left
        position relative
        text-align right
        min-width calc(144px + 32px)
        max-width calc(144px + 32px)
        border-right 2px solid main-mid
        padding-right 32px
        &-container
            margin-bottom 16px
            background-color dark-mid
            outline 1px solid main-mid
            padding 8px
            border-radius 4px
            margin-right -8px
            p
                text-align right
                line-height 16px
                margin-bottom 0
            &-last
                position absolute
                bottom 0
                right 32px
                h3
                    margin-bottom 0px
                p
                    text-align right
                    line-height 16px
    &-right
        &-date
            margin-top 6px
            text-align left
            line-height 10px !important
            min-width 64px
            max-width 64px
        &-container
            display flex
            flex-flow row nowrap
            gap 24px 
            margin-bottom 16px
            background-color dark-mid
            border-left 8px solid main-mid
            outline 1px solid main-mid
            padding 8px 12px
            border-radius 4px
            p, li
                line-height 16px
                margin-bottom 6px
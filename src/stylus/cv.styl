@require './util/color'
@require './util/fonts'
@require './util/reset'
@require './util/mixins'

body
    margin 0 auto
    padding 0 24px
h1
    head(32px, dark, 600)

p, li
    text(14px, dark, 400)
    line-height 20px
    text-align justify
ul
    list-style-position inside
a
    color accent.blue
    font-weight 600
    text-decoration underline
b
    font-weight 600

.comment
    color dark-lite
    &-small
        @extends .comment
        font-size 12px

.center
    text-align center

.right
    text-align right

.extend
        margin-bottom 8px
    &-small
        margin-bottom 8px
    &-none
        margin-bottom 0

.container
    margin-bottom 16px
    &:last-child
        margin-bottom 0

.link
    text-align justify

.cv
    flex(column, nowrap, gap: 8px)
    &-header
        text-align center
        margin-bottom 16px  
    &-split
        flex(row, nowrap, space-between)
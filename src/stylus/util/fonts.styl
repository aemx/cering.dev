@font-face
    font-family: "Inter"
    font-style normal
    font-weight 100 900
    src url("../fonts/inter_slnt,wght.ttf")
@font-face
    font-family: "Euclid Circular"
    font-style normal
    font-weight normal
    src url("../fonts/euclid.ttf")

semibold = 600

euclid(sz, c=black, h=1)
    font sz "Euclid Circular", sans-serif
    color c
    line-height sz*h
inter(sz, c=black, w=350, st=0, h=1)
    font sz "Inter", sans-serif
    color c
    font-variation-settings "wght" w, "slnt" st*-10
    letter-spacing -0.04em
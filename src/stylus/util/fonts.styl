load-font(name, file, w=normal, st=normal)
    @font-face
        font-family name
        font-style st
        font-weight w
        src url("../fonts/" + file + ".woff2")
        font-display swap

load-font("Inter", "inter_slnt,wght", 100 900)
load-font("Ubuntu Mono", "ubuntu-mono")
load-font("Euclid Circular", "euclid")

inter(sz, c=white, w=350, st=0, sp=-0.05em)
    font sz "Inter", sans-serif
    color c
    font-variation-settings "wght" w, "slnt" st*-10
    letter-spacing sp
ubuntu(sz, c=white)
    font sz "Ubuntu Mono", monospace
    color c
euclid(sz, c=white, h=1)
    font sz "Euclid Circular", sans-serif
    color c
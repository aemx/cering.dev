@require './util/color'
@require './util/fonts'
@require './util/reset'
@require './util/vendor'

@keyframes awes
    0%
        filter hue-rotate(0deg)
    50%
        filter hue-rotate(100deg)
    100%
        filter hue-rotate(0deg)
.body
    background-color bg()
    margin 50px auto
    width 745px
.title
    euclid(90px,#9950ff)
    letter-spacing -0.05em
    transform scaleY(1.1)
.sub
    inter(26px, main('55'),100,1)
    letter-spacing 0.4em
    margin-top -6px
p
    inter(19px, main())
    text-align justify
hr
    background-color main('33')
    border 0
    margin 22px auto
    height 1px
    max-width 400px
.sig
    text-align right
    &2
        width 225px
        fill alt()
        margin 4px 0 0 auto

.epic
    inter(19px,#d08dff,700)
    animation awes 2s infinite
.footer-text
    inter(16px, main('55'),,1)
    text-align center
    margin-bottom -16px
.socials
    display flex
    flex-flow row wrap
    justify-self center
    justify-content space-between
    margin 10px auto
    max-width 232px
    &-link
        width 18px
        fill main()
        transition 0.2s
        brand-colors = #1DA1F2 #9146FF #FF0000 #408294 #FF3300 #0078D4
        for c, i in brand-colors
            &:nth-child({i+1}):hover
                fill c
a
    text-decoration none
code
    font-size 17px
    color main('aa')
.l_red
    inter(19px,#EF5350, 700)
.l_purple
    inter(19px,#CE93D8, 700)
.l_grey
    inter(19px,#78909C, 700)
.l_yellow
    inter(19px,#FFF176, 700)
.l_blue
    inter(19px,#64B5F6, 700)
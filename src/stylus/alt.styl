@require './util/color'
@require './util/fonts'
@require './util/reset'
@require './util/mixins'

body
    margin 0 auto
    padding 0 24px
h1
    head(56px, dark, 600)
    margin-bottom 16px
h2
    head(34px, main-mid, 600)
    margin-bottom 4px
h3
    head(22px, dark, 600)
    margin-bottom 4px

p, li
    text(14px, dark, 400)
    line-height 20px
    text-align justify
    margin-bottom 16px
ul
    list-style-position inside
a
    color ceri-blue
    font-weight 600
b
    font-weight 600

.comment
    color dark-lite
    &-small
        @extends .comment
        font-size 12px

.no-bold
    font-weight 400

.center
    text-align center

.right
    text-align right

.external::after
    content " ðŸ¡¥"
    position relative
    font-size 0.6em
    top -1px
    letter-spacing 0px

.extend
    &-small
        margin-bottom 8px
    &-none
        margin-bottom 0

.container
    margin-bottom 32px  

.link
    text-align justify

// Resume =====================================================================

.resume
    display flex
    flex-flow row nowrap
    gap 24px
    margin-top 32px
    &-top
        display flex
        flex-flow row-reverse nowrap
        justify-content center
        align-items center
        gap 24px
        * svg  
            display inline
            width 196px
            margin-left -6px
            margin-right -6px
            path
                fill dark
        &-links
            display flex
            flex-flow row nowrap
            gap 8px
    &-me
        width 150px
        border-radius 8px
    &-sub
        text(22px, dark, 600)
        font-style italic
    &-left
        position relative
        flex-flow column nowrap
        text-align right
        min-width calc(144px + 32px)
        max-width calc(144px + 32px)
        border-right 2px solid main-mid
        padding-right 32px
        min-height 1000px
        &-container
            margin-bottom 16px
            p
                text-align right
                line-height 16px
                margin-bottom 0
            &-last
                @extends .resume-left-container
                position absolute
                bottom 0
                right 32px
                h3
                    margin-bottom 0px
    &-right
        &-date
            margin-top 6px
            text-align left
            line-height 10px !important
            min-width 64px
            max-width 64px
        &-container
            display flex
            flex-flow row nowrap
            gap 24px 
            margin-bottom 16px
            p, li
                line-height 16px
                margin-bottom 6px
doctype html
html(lang="en")
    head
        - noindex = true
        - const title = "vaporwave categorization form"
        - const desc = "vaporwave categorization form"
        include ./includes/_head.pug
        title vaporwave categorization form â€“ cering.dev
        script.
            window.addEventListener('load', function () {
                const sections = ['a','b','c','d','e','f','g'];
                sections.forEach(section => {
                    const sectid = document.getElementById(`part_${section}`);
                    console.log(window.location.hash)
                    if (window.location.hash == `#${section}`) {
                        sectid.style.display = "block"
                    } else {
                        sectid.style.display = "none"
                    }
                });
            })
    body.body
        include ./includes/header.pug
        - const arr = (n, off) => [...Array(n).keys()].map(x => String(x + off).padStart(2, '0'));
        each section, index in ['a','b','c','d','e','f','g']
            - const start = index*10+1
            .main(id=`part_${section}`)
                h1.h1 form #{section}
                br
                hr.gate-hr
                each val in arr(10,start)
                    div(style="display:flex;flex-flow:row,wrap;gap:20px;margin-bottom:12px;")
                        .h2-alt #{val}
                        audio(controls)
                            source(src=`audio/${val}.mp3` type="audio/mp3")
        include ./includes/footer.pug